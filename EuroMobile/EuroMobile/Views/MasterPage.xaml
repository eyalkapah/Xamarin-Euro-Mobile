<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EuroMobile.Views.MasterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:fa="clr-namespace:EuroMobile.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
    xmlns:viewmodels="clr-namespace:EuroMobile.ViewModels"
    Title="Personal Organiser"
    BackgroundColor="#1f1f1f"
    mc:Ignorable="d">
    <d:ContentPage.BindingContext>
        <viewmodels:MasterPageViewModel />
    </d:ContentPage.BindingContext>
    <StackLayout Padding="16,24,16,0" VerticalOptions="StartAndExpand">
        <StackLayout Padding="0,8">
            <Label
                FontFamily="{StaticResource FontAwesomeSolid}"
                FontSize="48"
                Text="{x:Static fa:FontAwesomeIcons.UserCircle}"
                TextColor="White"
                VerticalOptions="Start" />

            <Label
                Margin="0,0,0,-8"
                FontSize="12"
                Text="Eyal Kapah"
                TextColor="White" />
            <Label
                FontSize="12"
                Text="eykapah@microsoft.com"
                TextColor="White" />
        </StackLayout>

        <BoxView
            BackgroundColor="#696969"
            HeightRequest="1"
            HorizontalOptions="FillAndExpand"
            Opacity="0.3" />
        <ListView
            ItemsSource="{Binding NavigationItems}"
            SelectedItem="{Binding SelectedMenuItem, Mode=TwoWay}"
            SelectionMode="Single"
            VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="{Binding Glyph}"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Text="{Binding Title}"
                                TextColor="White"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout
            Padding="0,8"
            IsVisible="{Binding IsLoggedIn}"
            Orientation="Horizontal">
            <Label
                FontFamily="{StaticResource FontAwesomeSolid}"
                Text="{x:Static fa:FontAwesomeIcons.Plus}"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="30" />
            <Label
                Grid.Column="1"
                Text="Add account"
                TextColor="White"
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{prism:NavigateTo 'NavigationPage/SignInPage'}" />
            </StackLayout.GestureRecognizers>
        </StackLayout>

        <StackLayout Padding="0,8" Orientation="Horizontal">
            <Label
                FontFamily="{StaticResource FontAwesomeSolid}"
                Text="{x:Static fa:FontAwesomeIcons.Cog}"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="30" />
            <Label
                Grid.Column="1"
                Text="Settings"
                TextColor="White"
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{prism:NavigateTo 'NavigationPage/Settings'}" />
            </StackLayout.GestureRecognizers>
        </StackLayout>
    </StackLayout>
</ContentPage>